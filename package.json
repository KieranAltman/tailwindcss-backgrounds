{
  "name": "@freeloop/tailwindcss-backgrounds",
  "version": "0.1.2",
  "description": "Tailwindcss plugin with dot background and grid background.",
  "main": "src/index.js",
  "scripts": {
    "release": "np",
    "test": "c8 jest"
  },
  "license": "MIT",
  "repository": "https://github.com/zh-kai/tailwindcss-backgrounds",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "jest": "^28.1.3",
    "np": "^9.2.0",
    "postcss": "^8.4.32",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.6"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest/customMatchers.js"
    ]
  },
  "c8": {
    "exclude": [
      "jest/customMatchers.js",
      "**/*.test.js"
    ]
  },
  "keywords": [
    "tailwindcss"
  ]
}
